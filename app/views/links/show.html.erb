<% content_for :title, "Hackerz" %>

<h1><%= @link.headline %></h1>

<% if @link.comments.any? %>
  <h4>Here are the comments for this link</h4>
  <ul>
    <% @link.comments.each do |comment| %>
      <li>
        <%= comment.body %> |
        <%= link_to "Edit", edit_link_comment_path(@link, comment) %> |
        <%= link_to "Delete", link_comment_path(@link, comment),
          :data => {:confirm => "Are you sure?",
          :method => "delete"} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no comments yet!</p>
<% end %>

<p><%= link_to "Add a comment", new_link_comment_path(@link) %></p>
<p><%= link_to "Delete List", link_path(@link),
  :data => {:confirm => "Are you sure?",
  :method => "delete"}
%></p>

<p><%= link_to "Edit List Name", edit_link_path(@link) %></p>

<p><%= link_to "Return to Lists", links_path %></p>
